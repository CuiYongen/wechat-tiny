/* userInformation.wxss */
page{
  height:100%;
}
.mycontainer{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 20rpx;
  background: #ffffff;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items:baseline;
  width: 100%;
}

.userinfo-avatar {
  position:relative;
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-childcontain{
  display: flex;
  flex-wrap:wrap;
  align-self: center;
  flex-direction: column;
  height: auto;
  margin-top: 50rpx;
  flex:1;
}

.userinfo-nickname{
  font-size: 30rpx;
  align-self: center;
}

.userinfo-userinfo{
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 25rpx;
  align-self: center;
}
.userinfo-button{
  font-size:25rpx;
  position: relative;
  bottom: 15rpx;
  align-self: flex-end;
}

.mycontainer-listitem{
  background-image:url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}
.userinfo-info{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:80%;
  flex:2;
}

.item_list{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    align-items: center;
}

.itemcontainer {
  height: 100%;
  display: flex;
  background: #f8f8f8;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
} 

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  height: 33%;
  width:100%;
  font-size: 32rpx;
  margin: 3rpx;
  justify-content:center;
}
.item_sub_row{
  margin-top:10rpx;
  display: flex;
  font-size:32rpx;
  flex-direction: row;
  align-items:center;
}
.zsh_input{
  flex:1;
}
.mybutton{
  margin-left:30rpx;
  margin-right:30rpx;
}