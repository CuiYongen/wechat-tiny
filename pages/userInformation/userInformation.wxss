/* userInformation.wxss */
page{
  height:90%;
}
.mycontainer{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items:baseline;
  width: 100%;
}

.userinfo-avatar {
  float: left;
  position:relative;
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-childcontain{
  display: flex;
  flex-wrap:wrap;
  align-self: center;
  flex-direction: column;
  height: auto;
  margin-top: 50rpx;
  flex:1;
}

.userinfo-nickname{
  font-size: 30rpx;
}

.userinfo-userinfo{
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 25rpx;
  align-self: center;
}
.userinfo-button{
  font-size:25rpx;
  position: relative;
  bottom: 15rpx;
  align-self: flex-end;
}

.mycontainer-listitem{
  background-image:url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}
.userinfo-info{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:80%;
  flex:2;
}

